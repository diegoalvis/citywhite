<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_usuario_item"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="@dimen/margen_card"
    android:elevation="8dp"
    app:cardCornerRadius="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/nombre_usuario_item"
            style="@style/titulo_lugar_style"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="32dp"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_usuario_item"
            app:layout_constraintTop_toTopOf="@+id/image_usuario_item"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="Jaime Andres Zapata P" />

        <TextView
            android:id="@+id/correo_usuario_item"
            android:layout_width="54dp"
            android:layout_height="21dp"
            android:text="Usuarios123@hotmail.com"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/image_usuario_item"
            app:layout_constraintStart_toStartOf="@+id/nombre_usuario_item"
            app:layout_constraintTop_toBottomOf="@+id/nombre_usuario_item"
            tools:text="Usuarios123@hotmail.com" />

        <ImageView
            android:id="@+id/image_usuario_item"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_marginStart="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_account_black" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
