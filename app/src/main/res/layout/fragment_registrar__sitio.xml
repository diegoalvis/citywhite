<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registrar_Sitio">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/txt_nombre_Sitio_REGISTRO_ADMIN"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Ingrese Nombre"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/txt_descripcion_Sitio_REGISTRO_ADMIN"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:hint="Ingrese Descripción"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_nombre_Sitio_REGISTRO_ADMIN"
            tools:ignore="RtlCompat" />

        <EditText
            android:id="@+id/txt_direccion_Sitio_REGISTRO_ADMIN"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:hint="Ingrese Dirección"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_descripcion_Sitio_REGISTRO_ADMIN" />

        <EditText
            android:id="@+id/txt_telefono_Sitio_REGISTRO_ADMIN"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:hint="Ingrese Telefono"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_descripcion_Sitio_REGISTRO_ADMIN" />

        <EditText
            android:id="@+id/txt_facebook_Sitio_REGISTRO_ADMIN"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="12dp"
            android:hint="Ingrese Facebook"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_direccion_Sitio_REGISTRO_ADMIN" />

        <TextView
            android:id="@+id/txt_categorias_REGISTRO_ADMIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="20dp"
            android:text="Categoria"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edt_nombre_Sonido_ADMIN" />

        <Spinner
            android:id="@+id/sp_categorias_Sitio_REGISTRO_ADMIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="18dp"
            app:layout_constraintStart_toEndOf="@+id/txt_categorias_REGISTRO_ADMIN"
            app:layout_constraintTop_toBottomOf="@+id/edt_nombre_Sonido_ADMIN" />

        <Button
            android:id="@+id/btn_subir_Sitio_REGISTRO_ADMIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Registrar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sp_categorias_Sitio_REGISTRO_ADMIN" />

        <EditText
            android:id="@+id/edt_nombre_Imagen_ADMIN"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="10dp"
            android:hint="Ingrese Nombre Imagen"
            android:textAlignment="center"
            android:textSize="12dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_facebook_Sitio_REGISTRO_ADMIN" />

        <EditText
            android:id="@+id/edt_nombre_Sonido_ADMIN"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="10dp"
            android:hint="Ingrese Nombre Audio"
            android:textAlignment="center"
            android:textSize="12dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_imagen_Sitio_ADMIN" />

        <ImageView
            android:id="@+id/ibtn_escoger_Imagen_ADMIN"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/agregarimagen"
            app:layout_constraintStart_toEndOf="@+id/edt_nombre_Imagen_ADMIN"
            app:layout_constraintTop_toBottomOf="@+id/txt_facebook_Sitio_REGISTRO_ADMIN"
            tools:src="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/ibtn_escoger_Sonido_ADMIN"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/sonido"
            app:layout_constraintStart_toEndOf="@+id/edt_nombre_Sonido_ADMIN"
            app:layout_constraintTop_toBottomOf="@+id/img_imagen_Sitio_ADMIN"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="18dp"
            android:text="Selecciona Imagen"
            android:textSize="13dp"
            app:layout_constraintStart_toEndOf="@+id/ibtn_escoger_Imagen_ADMIN"
            app:layout_constraintTop_toBottomOf="@+id/txt_facebook_Sitio_REGISTRO_ADMIN" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:text="Selecciona Sonido"
            android:textSize="13dp"
            app:layout_constraintStart_toEndOf="@+id/ibtn_escoger_Sonido_ADMIN"
            app:layout_constraintTop_toBottomOf="@+id/img_imagen_Sitio_ADMIN" />

        <ImageView
            android:id="@+id/img_imagen_Sitio_ADMIN"
            android:layout_width="140dp"
            android:layout_height="90dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/icono"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ibtn_escoger_Imagen_ADMIN"
            tools:src="@drawable/icono" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>